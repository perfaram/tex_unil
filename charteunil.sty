% Presets
\DeclareOptionX{preset}{
  \ifthenelse{\equal{#1}{interne}} %NB, large
    {\executeFullwidth}{}
  \ifthenelse{\equal{#1}{externe}} %Couleur, large
    {\executeFullwidth \executeLogoCouleur}{}
